<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>


<AnchorPane id="AnchorPane" prefHeight="604.0" prefWidth="1084.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.1" fx:controller="project.UserController">
   <children>
      <ImageView fx:id="image" fitHeight="675.0" fitWidth="1084.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@images/no-teacher.jpg" />
         </image>
      </ImageView>
      <MenuBar layoutY="1.0" prefHeight="26.0" prefWidth="1045.0">
        <menus>
          <Menu mnemonicParsing="false" text="File" />
          <Menu mnemonicParsing="false" text="Time">
            <items>
              <MenuItem fx:id="time" mnemonicParsing="false" onAction="#ShowTime" text="Show Time" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Date">
            <items>
              <MenuItem fx:id="date" mnemonicParsing="false" onAction="#ShowDate" text="Show Date" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <Label fx:id="name" alignment="CENTER" layoutX="384.0" layoutY="117.0" prefHeight="42.0" prefWidth="187.0" textFill="WHITE">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <Button fx:id="close" layoutX="1045.0" layoutY="-2.0" mnemonicParsing="false" onAction="#Close" prefHeight="35.0" prefWidth="36.0">
         <graphic>
            <ImageView fx:id="cls" fitHeight="20.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@images/delete_16x16.gif" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <Button fx:id="card" layoutX="15.0" layoutY="94.0" mnemonicParsing="false" onAction="#MakeCard" prefHeight="44.0" prefWidth="118.0" text="Card">
         <font>
            <Font name="Bell MT" size="24.0" />
         </font>
      </Button>
      <Button fx:id="course" layoutX="15.0" layoutY="204.0" mnemonicParsing="false" onAction="#ShowCourse" prefHeight="44.0" prefWidth="118.0" text="Course">
         <font>
            <Font name="Bell MT" size="24.0" />
         </font>
      </Button>
      <Button fx:id="mark" layoutX="15.0" layoutY="309.0" mnemonicParsing="false" onAction="#ShowMark" prefHeight="44.0" prefWidth="118.0" text="Mark">
         <font>
            <Font name="Bell MT" size="24.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
